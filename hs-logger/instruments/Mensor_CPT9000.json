{
    "instrument_id": "CPT9000",
    "instrument_name": "Mensor CPT9000",
    "driver": "generic_driver_py_serial",
    "interface": "visa",            
    "port": "COM4",
    "baudrate":57600,
    "parity": "NONE",
    "stopbits": "1",
    "timeout": 3,
    "write_termination": "\r\n",
    "read_termination": "\r\n",
    "notes": "",
    "doOpen": false,
    "operations": {
        "read_pressure": {
            "type": "read_single",
            "name": "read pressure",
            "id": "read_pressure",
            "details": "",
            "data_type": "float",
            "unit": "",
            "command": "*IDN?",
            "transform_eq": ["P", 0, 1, 0, 0]
        },
        "action_read_resistance": {
            "type": "action",
            "name": "Read Resistance",
            "id": "action_read_resistance",
            "details": "Sets the device to read resistance",
            "command": "SENS:FUNC RES"
        },
        "set_channel": {
            "type": "write",
            "name": "Set Channel",
            "id": "set_channel",
            "command": "SENS:CHAN {}"
        }
    }
}